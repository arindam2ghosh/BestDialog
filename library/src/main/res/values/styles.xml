<resources>
    <style name="DialogButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">@dimen/ld_side_margin</item>
        <item name="android:paddingRight">@dimen/ld_side_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <!--====================== Button Theme ======================-->

    <!--Primary button theme-->
    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="fb_radius">10dp</item>
        <item name="fb_disabledColor">@color/colorGrey</item>
        b_disabledColor
    </style>

    <!--Ok button theme-->
    <style name="OkButtonTheme" parent="ButtonPrimary">
        <!--<item name="pressed_color">@color/colorPrimaryDark</item>-->
        <item name="fb_defaultColor">@color/darkSlateBlue</item>
        <item name="fb_focusColor">@color/almostBlack98</item>
        <item name="fb_textColor">@color/colorWhite</item>
    </style>

    <!--Send button theme-->
    <style name="SubmitButton" parent="ButtonPrimary">
        <item name="fb_defaultColor">@color/colorGreen</item>
        <item name="fb_focusColor">@color/almostBlack98</item>
        <item name="fb_textColor">@color/colorWhite</item>
    </style>

    <!--Cancel button theme-->
    <style name="GrayButton" parent="ButtonPrimary">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:colorButtonNormal">@color/colorPDark</item>
    </style>

    <!--FB button theme-->
    <style name="FBButtonTheme" parent="ButtonPrimary">
        <!--<item name="pressed_color">@color/colorPrimaryDark</item>-->
        <item name="fb_defaultColor">@color/okButtonColor</item>
        <item name="fb_focusColor">@color/almostBlack98</item>
        <item name="fb_textColor">@color/colorWhite</item>
    </style>

    <!--Google+ button theme-->
    <style name="GoogleButtonTheme" parent="ButtonPrimary">
        <!--<item name="pressed_color">@color/colorPrimaryDark</item>-->
        <item name="fb_defaultColor">@color/dullRed</item>
        <item name="fb_focusColor">@color/almostBlack98</item>
        <item name="fb_textColor">@color/colorWhite</item>
    </style>

    <!--Flat button theme-->
    <style name="ButtonFlatPrimary" parent="Widget.AppCompat.Button">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Transparent button theme-->
    <style name="TransparentTheme" parent="ButtonPrimary">
        <!--<item name="pressed_color">@color/colorPrimaryDark</item>-->
        <item name="fb_defaultColor">@color/colorWhite</item>
        <item name="fb_focusColor">@color/colorGrey</item>
        <item name="fb_textColor">@color/darkSlateBlue</item>
    </style>
</resources>
